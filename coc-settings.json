{
    "languageserver": {
        "cmake": {
            "command": "cmake-language-server",
            "filetypes": ["cmake"],
            "rootPatterns": [
                "build/"
            ],
            "initializationOptions": {
                "buildDirectory": "build"
            }
        }
    },
    "cmake.cmakePath": "cmake",
    "cmake.cmakeFormatter": "cmake-format",
    "cmake.lsp.enable":true
}
